@page
@model IEnumerable<_2day.Model.Student>

    


<h2>Студенты</h2>
<a asp-action="Create" class="btn btn-primary">Добавить студента</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

